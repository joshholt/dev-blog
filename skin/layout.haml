!!! Strict
%html{ lang: "en" }
  %head
    %meta{ content: "text/html; charset=utf-8", http-equiv: "Content-Type" }
    %title&= title + " - How To Node"
    %link{ href: "screen.css", rel: "stylesheet", type: "text/css", media: "screen", charset: "utf-8" }
    %link{ href: "sh_highlight.css", rel: "stylesheet", type: "text/css", media: "screen", charset: "utf-8" }
    %link(rel="alternate" type="application/rss+xml" title="RSS 2.0" href="feed.xml")

    %script{ src: "sh_highlight.js", type: "text/javascript" }
    :script
      function onload() {
        var items = document.getElementsByTagName("pre");
        for (var i=0, l = items.length; i < l; i++) {
          var code = items[i].innerHTML;
          console.log(code);
          var match = code.match(/^<code>\#\!([a-z]+)\n/);
          console.log(match);
          if (match) {
            items[i].className = "sh_" + match[1];
            items[i].innerHTML = "<code>" + code.substr(match[0].length);
          } else {
            items[i].className = "sh_javascript";
          }
        };
        sh_highlightDocument();
      };

  %body{onload: "onload()"}
